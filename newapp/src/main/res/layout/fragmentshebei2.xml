<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333c5a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:background="#22283c"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xinghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称"
                    android:textColor="#ffffff"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/shebeimc"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bbhui"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="输入设备名称"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#E3E0E0"
                    android:textSize="14.5sp"
                    android:theme="@style/EditTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shebeixinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备信息>"
                    android:textColor="#ffffff"
                    android:textSize="14.5sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测量单位"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"
                    android:textSize="14.5sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/e1"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bbhui"
                        android:text="PPM.M"
                        android:textColor="#000000"
                        android:textSize="14.5sp" />

                    <Button
                        android:id="@+id/e2"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bbhui"
                        android:text="VOL.M"
                        android:textColor="#000000"
                        android:textSize="14.5sp" />

                    <Button
                        android:id="@+id/e3"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bbhui"
                        android:text="LEL.M"
                        android:textColor="#000000"
                        android:textSize="14.5sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警值"
                    android:textColor="#ffffff"
                    android:textSize="14.5sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低报警值"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/textdi"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/bbhui"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="输入低报值"
                        android:inputType="number"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#E3E0E0"
                        android:textSize="14.5sp"
                        android:theme="@style/EditTextStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="PPM.M"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高报警值"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/textgao"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/bbhui"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请输入高报值"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="#E3E0E0"
                        android:textSize="14.5sp"
                        android:theme="@style/EditTextStyle" />

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="PPM.M"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/huifu"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bbhui"
                    android:text="恢复出厂设置"
                    android:textColor="#000000"
                    android:textSize="14.5sp" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bbhuang"
                    android:text="保存"
                    android:textColor="#000000"
                    android:textSize="14.5sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>