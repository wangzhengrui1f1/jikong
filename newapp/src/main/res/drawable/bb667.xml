<?xml version="1.0" encoding="utf-8" ?>
<!--相当于做了一张圆角的图片,然后给button作为背景图片-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置背景色-->
<!--    <solid android:color="#7457ED" />-->
    <gradient
        android:angle="180"
        android:endColor="#DA5F3D48"
        android:startColor="#D01E3D73"
        android:type="linear" />

    <padding android:left="10dp" android:bottom="10dp"
        android:top="10dp" android:right="10dp">

    </padding>
    <!--设置圆角-->
    <corners android:radius="10dip" />

    <!--边框宽度-->
    <size android:width="3dip" />

    <!--边框-->
    <!--设置边框线的宽度和颜色-->

</shape>
